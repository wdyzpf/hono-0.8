[
  ["router", {
    "id": "Hono.Example.Router",
    "mode": "standalone",
    "workerThreads": 3
  }],

  ["authServicePlugin", {
    "name": "Hono Auth",
    "host": "hono-service-auth.hono",
    "port": 5672
  }],

  ["sslProfile", {
    "name": "external",
    "certDb": "/etc/hono/trusted-certs.pem",
    "certFile": "/etc/hono/qdrouter-cert.pem",
    "keyFile": "/etc/hono/qdrouter-key.pem"
  }],

  ["sslProfile", {
    "name": "internal",
    "certDb": "/etc/hono/trusted-certs.pem",
    "certFile": "/etc/hono/qdrouter-cert.pem",
    "keyFile": "/etc/hono/qdrouter-key.pem",
    "uidFormat": "oun"
  }],

  ["listener", {
    "sslProfile": "external",
    "requireSsl": true,
    "host": "0.0.0.0",
    "port": 5671,
    "authenticatePeer": true,
    "saslMechanisms": "PLAIN",
    "saslPlugin": "Hono Auth"
  }],

  ["listener", {
    "host": "0.0.0.0",
    "port": 5672,
    "authenticatePeer": true,
    "saslMechanisms": "PLAIN",
    "saslPlugin": "Hono Auth"
  }],

  ["listener", {
    "sslProfile": "internal",
    "requireSsl": true,
    "host": "0.0.0.0",
    "port": 5673,
    "maxSessionFrames": 10000,
    "authenticatePeer": true,
    "saslMechanisms": "EXTERNAL"
  }],

  ["connector", {
    "sslProfile": "external",
    "name": "broker",
    "host": "hono-artemis.hono",
    "port": 5671,
    "role": "route-container",
    "saslUsername": "artemis",
    "saslPassword": "artemis"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "dir": "in",
    "connection": "broker"
  }],

  ["linkRoute", {
    "prefix": "event/",
    "dir": "out",
    "connection": "broker"
  }],

  ["address", {
    "prefix": "telemetry/",
    "distribution": "balanced"
  }],

  ["policy", {
    "maxConnections": 1000,
    "enableVhostPolicy": true,
    "defaultVhost": "hono"
  }],

  ["vhost", {
      "hostname": "hono",
      "maxConnections": 500,
      "maxConnectionsPerUser": 20,
      "maxConnectionsPerHost": 10,
      "allowUnknownUser": true,
      "groups": {
        "$default": {
          "remoteHosts": "*"
        }
      }
  }],

  ["vhost", {
      "hostname": "hono-internal",
      "maxConnections": 20,
      "groups": {
        "Hono": {
          "users": "Eclipse IoT;Hono;hono-messaging,Eclipse IoT;Hono;http-adapter,Eclipse IoT;Hono;mqtt-adapter,Eclipse IoT;Hono;amqp-adapter",
          "remoteHosts": "*",
          "maxSessions": 2,
          "maxMessageSize": 131072,
          "allowUserIdProxy": true,
          "targets": "telemetry/*, event/*, control/*",
          "sources": "control/*"
        }
      }
  }],

  ["log", {
    "module": "DEFAULT",
    "enable": "info+"
  }]
]
